<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/selector_white"
    android:id="@+id/ll_consult"
    >
    <LinearLayout
        android:id="@+id/ll_seek"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/green"
        android:gravity="center_vertical"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            >
            <EditText
                android:id="@+id/ed_search"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/guanbi"
                android:hint="  请输入咨询师的姓名"
                android:textSize="@dimen/activity_horizontal_margin"
                android:textColor="#999999"
                android:paddingLeft="10dp"
                android:textColorHint="#c8c8c8"
                android:background="@color/selector_white"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/iv_two_dimension_code"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/avatar_1"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_tab"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/green"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        >
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="@string/zixuntime"
            android:textColor="@color/selector_white"
            android:gravity="center"
            android:drawableRight="@mipmap/arrow_right"
            />
        <TextView
            android:id="@+id/tv_be_adept_at"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="@string/be_adept_at"
            android:textColor="@color/selector_white"
            android:gravity="center"
            android:drawableRight="@mipmap/arrow_right"
            />
        <TextView
            android:id="@+id/tv_screen"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="@string/screen"
            android:textColor="@color/selector_white"
            android:gravity="center"
            android:drawableRight="@mipmap/arrow_right"
            />
    </LinearLayout>
    <ListView
        android:id="@+id/lv_zixun"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        >

    </ListView>
</LinearLayout>