<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn_discount"
            android:layout_width="20dp"
            android:layout_height="fill_parent"
            android:ems="1"
            android:text="优惠券"
            android:background="@drawable/btn_discount_red"
            android:textColor="@color/selector_white"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:gravity="center"
            />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textColor="@color/red_secondary_color"
                android:textSize="60dp"
                android:text="30"
                android:layout_centerInParent="true"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tv_yuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="@color/red_secondary_color"
                android:layout_toRightOf="@+id/tv_price"
                android:layout_alignBottom="@+id/tv_price"
                android:paddingBottom="30dp"
                />
        </RelativeLayout>
        <ImageView
            android:layout_width="1px"
            android:background="@color/grays"
            android:layout_height="fill_parent" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="有效期至"
                android:textColor="@color/txt_content_color"
                android:layout_marginLeft="50dp"
                />
            <TextView
                android:layout_below="@+id/tv"
                android:id="@+id/tv_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="时间"
                android:textColor="@color/txt_content_color"
                android:layout_alignLeft="@+id/tv"
                />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.8"
            >
            <ImageView
                android:id="@+id/iv_type"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@mipmap/personage"
                android:visibility="invisible"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>