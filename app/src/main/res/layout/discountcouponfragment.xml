<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:clickable="true"
    >
    <RelativeLayout
        android:paddingTop="10dp"
        android:id="@+id/layout_actionbar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:clipToPadding="false"
        android:fitsSystemWindows="true"
        android:background="@color/green_essential_colour"
        android:layout_height="70dp"
        >
        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            >
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/btn_left"
                android:src="@mipmap/actionbar_back"
                android:layout_marginLeft="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_title"
            android:gravity="center"
            android:layout_width="match_parent"
            android:text="@string/title_forget_psw"
            android:textSize="@dimen/txt_18sp"
            android:textColor="@color/selector_white"
            android:layout_height="60dp"
            />
        <FrameLayout
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent"
            android:visibility="invisible"
            >
            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_right"
                android:textColor="@color/tv_black"
                android:padding="5dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                />
        </FrameLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >
        <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lv_discount"
            android:divider="@null"
            android:scrollbars="none"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/selector_white"
            >
            <EditText
                android:id="@+id/cdkey"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:hint="输入兑换码"
                android:textSize="@dimen/txt_12sp"
                android:background="@null"
                android:paddingLeft="10dp"
                />
            <ImageView
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="@color/grays"
                />
            <TextView
                android:id="@+id/exchange"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textSize="@dimen/txt_16sp"
                android:textColor="@color/orange_secondary_color"
                android:text="兑换"
                android:gravity="center"
                />

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>