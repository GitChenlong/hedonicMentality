<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        >
        <com.sage.hedonicmentality.widget.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/personage"
            />
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/txt_big_headline_color"
            android:textSize="@dimen/txt_14sp"
            android:text="用户名"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="咨询方向："
            android:textSize="@dimen/txt_12sp"
            android:textColor="@color/txt_annotation_color"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_direction"
            android:textSize="@dimen/txt_12sp"
            android:textColor="@color/txt_annotation_color"
            android:text="方向"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="疗效："
            android:textSize="@dimen/txt_12sp"
            android:textColor="@color/txt_annotation_color"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_curative_effect"
            android:textSize="@dimen/txt_12sp"
            android:textColor="@color/txt_annotation_color"
            android:layout_marginLeft="5dp"
            android:text="疗效"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="态度："
            android:textSize="@dimen/txt_12sp"
            android:textColor="@color/txt_annotation_color"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_manner"
            android:textSize="@dimen/txt_12sp"
            android:textColor="@color/txt_annotation_color"
            android:layout_marginLeft="5dp"
            android:text="态度"
            />
    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/question_two"
        android:textSize="@dimen/txt_14sp"
        android:textColor="@color/txt_big_headline_color"
        android:id="@+id/tv_content"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="2016-19-12 15:30"
        android:textSize="@dimen/txt_14sp"
        android:textColor="@color/txt_annotation_color"
        android:layout_marginTop="10dp"
        />
    </LinearLayout>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/bg_color"
            android:layout_marginLeft="10dp"
            />
</LinearLayout>
