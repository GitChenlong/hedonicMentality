<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="亲切可人（99）"
            android:textColor="@color/txt_content_color"
            android:textSize="@dimen/txt_12sp"
            android:background="@drawable/btn_yellow"
            android:padding="2dp"
            android:layout_marginRight="5dp"
            android:id="@+id/tv_evaluate_label_one"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="亲切可人（99）"
            android:textColor="@color/txt_content_color"
            android:textSize="@dimen/txt_12sp"
            android:background="@drawable/btn_yellow"
            android:padding="2dp"
            android:layout_marginRight="5dp"
            android:id="@+id/tv_evaluate_label_two"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="亲切可人（99）"
            android:textColor="@color/txt_content_color"
            android:textSize="@dimen/txt_12sp"
            android:background="@drawable/btn_yellow"
            android:padding="2dp"
            android:layout_marginRight="5dp"
            android:id="@+id/tv_evaluate_label_three"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="亲切可人（99）"
            android:textColor="@color/txt_content_color"
            android:textSize="@dimen/txt_12sp"
            android:background="@drawable/btn_yellow"
            android:padding="2dp"
            android:layout_marginRight="5dp"
            android:id="@+id/tv_evaluate_label_four"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/bg_color"
        />
    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/evaluate_listview"
        android:divider="@null"
        android:scrollbars="none"
        >
    </ListView>
</LinearLayout>