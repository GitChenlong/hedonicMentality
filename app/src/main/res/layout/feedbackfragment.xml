<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:clickable="true"
    >
    <RelativeLayout
        android:paddingTop="10dp"
        android:id="@+id/layout_actionbar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:clipToPadding="false"
        android:fitsSystemWindows="true"
        android:background="@color/green_essential_colour"
        android:layout_height="70dp"
        >
        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            >
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/btn_left"
                android:src="@mipmap/left"
                android:layout_marginLeft="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_lucency_green"
                >
            <RadioGroup
                android:id="@+id/rg_title"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="horizontal"
                >
            <RadioButton
                android:id="@+id/rb_question"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="常见问题"
                android:background="@drawable/btn_lucency_green"
                android:textColor="@color/selector_white"
                android:padding="5dp"
                />
            <RadioButton
                android:id="@+id/rb_feedback"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="意见反馈"
                android:background="@drawable/btn_white"
                android:textColor="@color/green_essential_colour"
                android:padding="5dp"
                />
            </RadioGroup>
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent"
            android:visibility="invisible"
            >
            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_right"
                android:textColor="@color/tv_black"
                android:padding="5dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                />
        </FrameLayout>

    </RelativeLayout>
    <FrameLayout
        android:id="@+id/fl_feedback"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    </FrameLayout>
</LinearLayout>