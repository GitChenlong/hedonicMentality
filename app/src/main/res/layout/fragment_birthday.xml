<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@mipmap/br_bg"
    android:clickable="true"
    android:orientation="vertical">
    <include layout="@layout/actionbar_account"/>
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >


        <RelativeLayout
            android:id="@+id/bithday_layout"
            android:layout_width="fill_parent"
            android:layout_height="220dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="220dip"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:gravity="center"
                android:background="@mipmap/birthday"
                android:padding="2dp"
                android:orientation="horizontal" >

                <com.sage.libwheelview.widget.wheel.WheelView
                    android:id="@+id/year_birthday"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" />

                <com.sage.libwheelview.widget.wheel.WheelView
                    android:id="@+id/month_birthday"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" />

                <com.sage.libwheelview.widget.wheel.WheelView
                    android:id="@+id/day_birthday"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" />
            </LinearLayout>

            <!--<FrameLayout-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="220.0dip"-->
            <!--android:layout_gravity="center"-->
            <!--android:background="@drawable/com_ttshrk_view_scroll_picker_background" >-->
            <!--</FrameLayout>-->
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
