<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:clipChildren="false"
    android:background="#00000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/layout_show_back"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            >
            <ImageView
                android:id="@+id/iv_wa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/endhead"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@mipmap/bg04"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_weitime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/whi"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.2"
                            android:layout_height="wrap_content"
                            android:text="心率："
                            android:textSize="17sp"
                            android:textColor="@android:color/black"
                            android:paddingLeft="20dp"
                            />
                        <TextView
                            android:id="@+id/tv_one_hr"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="17sp"
                            android:textColor="@color/tex_cor"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.2"
                            android:layout_height="wrap_content"
                            android:text="生命值："
                            android:textSize="17sp"
                            android:textColor="@android:color/black"
                            />
                        <TextView
                            android:id="@+id/tv_one_hp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="17sp"
                            android:textColor="@color/tex_cor"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="时长："
                            android:textSize="17sp"
                            android:textColor="@android:color/black"
                            android:paddingLeft="20dp"
                            />
                        <TextView
                            android:id="@+id/tv_one_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="17sp"
                            android:textColor="@color/tex_cor"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_continue"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@mipmap/btn01"
                android:layout_marginTop="25dp"
                android:text="继续"
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="@color/wh"
                />
            <TextView
                android:id="@+id/tv_exit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@mipmap/btnwhite"
                android:layout_marginTop="25dp"
                android:text="退出"
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="@android:color/black"
                />

        </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:id="@+id/layout_show_one"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:id="@+id/iv_wawa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/endhead"
            />
        <TextView
            android:id="@+id/tv_endtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/whi"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginTop="30dp"
            android:background="@mipmap/bga"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                >
                <ImageView
                    android:id="@+id/iv_one_level"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="200dp"
                    android:layout_marginRight="20dp"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="200dp"
                    android:background="@mipmap/bc_level9"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="@color/wh"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:layout_marginLeft="20dp"
                    >
                    <TextView
                        android:text="生命值："
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_score"
                        android:text="0"
                        android:textSize="15sp"
                        android:textColor="@color/breath_setting_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:text="心率:"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_hr"
                        android:text="0"
                        android:textSize="15sp"
                        android:textColor="@color/breath_setting_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"
                    >
                    <TextView
                        android:text="时间:"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_time"
                        android:text="0"
                        android:textSize="15sp"
                        android:textColor="@color/breath_setting_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
            <TextView
                android:id="@+id/tv_share"
                android:textColor="@color/whi"
                android:text="分享"
                android:layout_marginTop="15dp"
                android:textSize="22sp"
                android:gravity="center"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:background="@mipmap/btn01"/>
    </LinearLayout>
<LinearLayout
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<TextView
    android:id="@+id/tv_title"
    android:text="静心呼吸"
    android:textColor="#000000"
    android:textSize="18sp"
    android:gravity="center"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:background="@mipmap/icon_horizontal_line"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/tv_duration"
        android:text=""
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_height="match_parent">
            <!--<TextView-->
                <!--android:text="心率:"-->
                <!--android:textColor="#000000"-->
                <!--android:textSize="15sp"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" />-->
            <!--<TextView-->
                <!--android:id="@+id/tv_hr"-->
                <!--android:text="0"-->
                <!--android:textSize="15sp"-->
                <!--android:textColor="@color/breath_setting_text"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content" />-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_height="match_parent">
            <TextView
                android:text="静心："
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_percent"
                android:text="0"
                android:textSize="15sp"
                android:textColor="@color/breath_setting_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_height="match_parent">
            <TextView
                android:text="呼吸:"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_bpm"
                android:text="0"
                android:textSize="15sp"
                android:textColor="@color/breath_setting_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_height="match_parent">
            <!--<TextView-->
                <!--android:text="得分："-->
                <!--android:textColor="#000000"-->
                <!--android:textSize="15sp"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" />-->
            <!--<TextView-->
                <!--android:id="@+id/tv_score"-->
                <!--android:text="0"-->
                <!--android:textSize="15sp"-->
                <!--android:textColor="@color/breath_setting_text"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content" />-->
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_exit"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_goon"
            android:text="继续"
            android:textSize="@dimen/default_btn_text_size"
            android:background="@drawable/account_btn"
            android:textColor="@color/selector_white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_exit"
            android:text="退出"
            android:textSize="@dimen/default_btn_text_size"
            android:textColor="#9A9A9A"
            android:background="@drawable/btn_gray"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_finish"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_again"
            android:layout_marginTop="10dp"
            android:text="再来一次"
            android:textSize="@dimen/default_btn_text_size"
            android:background="@drawable/account_btn"
            android:textColor="@color/selector_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_share"
            android:layout_marginTop="10dp"
            android:text="我要分享"
            android:textSize="@dimen/default_btn_text_size"
            android:visibility="gone"
            android:textColor="@color/text_orange"
            android:background="@drawable/edit_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_pic"
            android:src="@mipmap/icon_dia_finish"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
</LinearLayout>

    <TextView
        android:id="@+id/tv_close"
        android:background="@mipmap/cancel"
        android:gravity="center"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />

</FrameLayout>