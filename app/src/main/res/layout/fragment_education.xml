<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bg5"
    android:clickable="true"
    >
    <include layout="@layout/actionbar_account"/>
    <RelativeLayout
        android:id="@+id/bithday_layout"
        android:layout_width="fill_parent"
        android:layout_height="280dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="220dip"
            android:layout_marginLeft="18dip"
            android:layout_marginRight="18dip"
            android:gravity="center"
            android:background="@mipmap/birthday"
            android:padding="2dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal" >

            <com.sage.libwheelview.widget.wheel.WheelView
                android:id="@+id/wh_education"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                 />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
