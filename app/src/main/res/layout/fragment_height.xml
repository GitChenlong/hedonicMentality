<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bs_bg"
    android:clickable="true"
    >
    <include layout="@layout/actionbar_account"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <TextView
                android:id="@+id/up_hegit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/uphegit_txt"
                android:textSize="19sp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="80dp"
                android:textColor="@color/tv_black"
                />
    <com.sage.hedonicmentality.view.TuneWheel
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/tuneWheel"
        android:layout_width="120dp"
        android:layout_alignParentEnd="true"
        android:layout_height="fill_parent" />
        <ImageView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/wawa"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="80dp"
            android:layout_marginBottom="30dp"
            />
    </RelativeLayout>

</LinearLayout>
