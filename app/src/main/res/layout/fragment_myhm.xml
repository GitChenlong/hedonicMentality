<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@mipmap/bg03"
    >
    <include layout="@layout/actionbar_account"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/hm_zhuyi"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@mipmap/button01"
            android:text="@string/zhuyi"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:textColor="@color/bg_title"
            />
    </RelativeLayout>
    <ListView
        android:id="@+id/list_jk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:divider="@null"
        android:focusable="false"
        ></ListView>
</LinearLayout>
