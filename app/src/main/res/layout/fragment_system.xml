<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@mipmap/bg03"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:clickable="true"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<include layout="@layout/actionbar_account"/>
    <!--<com.sage.hedonicmentality.widget.CircleImageView-->

        <!--android:layout_width="200dp"-->
        <!--android:layout_height="200dp"-->
        <!--android:src="@mipmap/ic_launcher"/>-->
    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@mipmap/logo_login"-->
        <!--android:layout_marginTop="20dp"-->
        <!--/>-->
    <com.sage.hedonicmentality.widget.CircleImageView
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/avatar_1"
        android:id="@+id/iv_headsys"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/tv_version"
        android:text="@string/version_show"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="vertical"
        android:showDividers="beginning|middle|end"
        android:layout_margin="20dp"
        android:background="@mipmap/sysbg4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/tv_clear"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="50dp"
            >
            <TextView
                android:text="清理缓存"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/tv_black"
                android:layout_height="50dp" />
            <TextView
                android:id="@+id/tv_cache"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textColor="@color/tv_black"
                android:layout_height="match_parent" />
            <ImageView
                android:src="@drawable/ic_forward"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                />

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#cccccc"
            />
        <RelativeLayout
            android:id="@+id/tv_check_version"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <TextView
                android:text="检查更新"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/tv_black"
                android:layout_height="50dp" />
            <ImageView
                android:id="@+id/iv_arrow"
                android:src="@drawable/ic_forward"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />
            <ImageView
                android:id="@+id/iv_new_version"
                android:visibility="gone"
                android:layout_toLeftOf="@+id/iv_arrow"
                android:src="@mipmap/icon_red_dot"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>
    <Button
        android:id="@+id/btn_login_out"
        android:text="退出登录"
        android:layout_margin="20dp"
        android:textSize="20sp"
        android:background="@mipmap/bt_ren"
        android:textColor="@color/bg_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>