<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@mipmap/bac01"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/actionbar_account"/>

    <LinearLayout
        android:orientation="vertical"
        android:showDividers="beginning|middle|end"
        android:layout_marginTop="20dp"
        android:background="@mipmap/bg04"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <TextView
                android:text="旧密码"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/tv_black"
                android:layout_height="50dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:textColor="#666666"
                android:layout_centerVertical="true"
                android:id="@+id/ed_oldpwd"
                android:hint="请输入旧密码"
                android:digits="@string/psw_digits"
                android:textSize="15sp"
                android:maxLength="16"
                android:singleLine="true"
                android:inputType="textPassword"
                android:imeOptions="actionNext"
                android:paddingRight="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="80dp"
                android:background="@null"
                />
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#cccccc"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <TextView
                android:text="新密码"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/tv_black"
                android:layout_height="50dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:textColor="#666666"
                android:layout_centerVertical="true"
                android:paddingRight="5dp"
                android:id="@+id/ed_newpwd"
                android:hint="请输入6-16位新密码"
                android:textSize="15sp"
                android:maxLength="16"
                android:singleLine="true"
                android:inputType="textPassword"
                android:imeOptions="actionNext"
                android:digits="@string/psw_digits"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="80dp"
                android:background="@null"
                />
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#cccccc"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <TextView
                android:text="确认密码"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/tv_black"
                android:layout_height="50dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:digits="@string/psw_digits"
                android:textColor="#666666"
                android:layout_centerVertical="true"
                android:id="@+id/ed_qrpwd"
                android:paddingRight="5dp"
                android:hint="请再次输入6-16位新密码"
                android:textSize="15sp"
                android:maxLength="16"
                android:singleLine="true"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="80dp"
                android:background="@null"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>