<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bac01"
    android:clickable="true"
    android:id="@+id/layout_root"
    >
    <include layout="@layout/actionbar_account"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dw"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="30dp"
        android:textSize="15sp"
        />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@mipmap/kuang02"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/position"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tv_dwdress"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="定位信息"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="50dp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:id="@+id/iv_dw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/gray_wrong"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/xzad"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="30dp"
            android:textSize="15sp"
            />
        <RelativeLayout
            android:id="@+id/layout_adress"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@mipmap/kuang02"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            >
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="地区信息"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="50dp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:id="@+id/iv_dr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/gray_wrong"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>
</LinearLayout>
