<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/selector_white"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <com.sage.hedonicmentality.widget.CircleImageView
            android:id="@+id/teacher"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/personage"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            />
        <TextView
            android:id="@+id/txt_teachername"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/green_essential_colour"
            android:textSize="@dimen/txt_14sp"
            android:text="username"
            android:layout_below="@+id/teacher"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/txt_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_content_color"
            android:textSize="@dimen/txt_14sp"
            android:text="@string/question_two"
            android:layout_below="@+id/txt_teachername"
            android:gravity="center_horizontal"
            android:lines="4"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:ellipsize="end"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/green_essential_colour"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ï¿¥300"
                android:layout_centerInParent="true"
                android:textColor="@color/selector_white"
                />
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:id="@+id/ll_indent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/orderss"
                />
            <TextView
                android:id="@+id/tv_indent"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textColor="@color/orange_secondary_color"
                android:text="21531"
                android:textSize="@dimen/txt_10sp"
                android:layout_marginLeft="1dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_love"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/smile"
                />
            <TextView
                android:id="@+id/tv_love"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textColor="@color/orange_secondary_color"
                android:text="21531"
                android:textSize="@dimen/txt_10sp"
                android:layout_marginLeft="1dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_flower"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/flower_normal"
                />
            <TextView
                android:id="@+id/tv_flower"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textColor="@color/orange_secondary_color"
                android:text="21531"
                android:textSize="@dimen/txt_10sp"
                android:layout_marginLeft="1dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>