<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:clickable="true"
    >
    <include layout="@layout/title"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal"
        android:background="@color/green_essential_colour"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/selector_white"
            android:padding="10dp"
            >
            <com.sage.hedonicmentality.widget.CircleImageView
                android:id="@+id/user"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/personage"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="USER"
                        android:textColor="@color/green_essential_colour"
                        android:textSize="@dimen/txt_16sp"
                        />
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:text="￥240"
                        android:background="@null"
                        android:textColor="@color/orange_secondary_color"
                        android:layout_marginLeft="10dp"
                        android:textSize="@dimen/txt_14sp"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="2016年6月14日（周二）16：20"
                    android:textColor="@color/txt_content_color"
                    android:textSize="@dimen/txt_14sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:layout_above="@+id/ll_bottom"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/bg_color"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:background="@color/selector_white"
                >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/txt_16sp"
                        android:textColor="@color/txt_content_color"
                        android:text="@string/booking_details"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:textSize="@dimen/txt_14sp"
                        android:textColor="@color/txt_annotation_color"
                        android:text="@string/reservation_number"
                        />
                    <TextView
                        android:id="@+id/tv_res_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:textSize="@dimen/txt_14sp"
                        android:textColor="@color/txt_annotation_color"
                        android:text="950027"
                        />
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/txt_annotation_color"
                    android:layout_marginLeft="10dp"
                    />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:textSize="@dimen/txt_14sp"
                        android:textColor="@color/txt_annotation_color"
                        android:text="@string/visitor"
                        />
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/txt_14sp"
                        android:textColor="@color/txt_annotation_color"
                        android:text="果子"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:textSize="@dimen/txt_14sp"
                        android:textColor="@color/txt_annotation_color"
                        android:text="@string/sex"
                        />
                    <TextView
                        android:id="@+id/sex"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/txt_14sp"
                        android:textColor="@color/txt_annotation_color"
                        android:text="男"
                        />
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/txt_annotation_color"
                    android:layout_marginLeft="10dp"
                    />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:textSize="@dimen/txt_14sp"
                        android:textColor="@color/txt_annotation_color"
                        android:text="@string/real_name"
                        />
                    <TextView
                        android:id="@+id/real_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/txt_14sp"
                        android:textColor="@color/txt_annotation_color"
                        android:text="果子"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:textSize="@dimen/txt_14sp"
                        android:textColor="@color/txt_annotation_color"
                        android:text="@string/age"
                        />
                    <TextView
                        android:id="@+id/age"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/txt_14sp"
                        android:textColor="@color/txt_annotation_color"
                        android:text="男"
                        />
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/txt_annotation_color"
                    android:layout_marginLeft="10dp"
                    />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:textSize="@dimen/txt_14sp"
                        android:textColor="@color/txt_annotation_color"
                        android:text="@string/best_education"
                        />
                    <TextView
                        android:id="@+id/best_education"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/txt_14sp"
                        android:textColor="@color/txt_annotation_color"
                        android:text="果子"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:textSize="@dimen/txt_14sp"
                        android:textColor="@color/txt_annotation_color"
                        android:text="@string/profession"
                        />
                    <TextView
                        android:id="@+id/profession"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/txt_14sp"
                        android:textColor="@color/txt_annotation_color"
                        android:text="男"
                        />
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/txt_annotation_color"
                    android:layout_marginLeft="10dp"
                    />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:textSize="@dimen/txt_14sp"
                        android:textColor="@color/txt_annotation_color"
                        android:text="@string/consult_direction"
                        />
                    <TextView
                        android:id="@+id/consult_direction"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/txt_14sp"
                        android:textColor="@color/txt_annotation_color"
                        android:text="果子"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:textSize="@dimen/txt_14sp"
                        android:textColor="@color/txt_annotation_color"
                        android:text="@string/profession"
                        android:visibility="invisible"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/txt_14sp"
                        android:textColor="@color/txt_annotation_color"
                        android:text="男"
                        android:visibility="invisible"
                        />
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/txt_annotation_color"
                    android:layout_marginLeft="10dp"
                    />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    >
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/kunhuo"
                        android:textColor="@color/txt_annotation_color"
                        android:textSize="@dimen/txt_14sp"
                        />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt_14sp"
                        android:textColor="@color/txt_annotation_color"
                        android:text="@string/question_two"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:background="@color/selector_white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reservation_price"
                    android:textColor="@color/txt_content_color"
                    android:textSize="@dimen/txt_14sp"
                    />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_14sp"
                    android:textColor="@color/txt_annotation_color"
                    android:text="￥340"
                    android:gravity="right"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/selector_white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/discount_coupon"
                    android:textColor="@color/txt_content_color"
                    android:textSize="@dimen/txt_14sp"
                    />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_14sp"
                    android:textColor="@color/txt_annotation_color"
                    android:text="￥340"
                    android:gravity="right"
                    />
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/txt_annotation_color"
                android:layout_marginLeft="10dp"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical"
                android:background="@color/selector_white"
                android:padding="10dp"
                >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/disbursements"
                        android:textColor="@color/txt_annotation_color"
                        android:textSize="@dimen/txt_14sp"
                        />
                    <TextView
                        android:id="@+id/tv_dis_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/orange_secondary_color"
                        android:text="240"
                        android:textSize="@dimen/txt_14sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="下单时间："
                        android:textColor="@color/txt_annotation_color"
                        android:textSize="@dimen/txt_14sp"
                        />
                    <TextView
                        android:id="@+id/place_an_order_tme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2016/4/30 5：52"
                        android:textColor="@color/txt_annotation_color"
                        android:textSize="@dimen/txt_14sp"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/selector_white"
        android:gravity="right"
        android:padding="15dp"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:id="@+id/btn_promise_feedback"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="@string/promisefeedback"
            android:textSize="@dimen/txt_14sp"
            android:textColor="@color/txt_annotation_color"
            android:background="@null"
            />
        <Button
            android:id="@+id/btn_evaluate"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="立即评价"
            android:textSize="@dimen/txt_14sp"
            android:textColor="@color/orange_secondary_color"
            android:background="@null"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    </RelativeLayout>
</LinearLayout>