<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_duration_stroke"
    android:backgroundDimEnabled="false"
    >
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollview"
        android:scrollbars="none"
        >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="50dp"
        >
        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="20dp"
            android:clipToPadding="false"
            android:fitsSystemWindows="true"
            android:background="@drawable/btn_grays"
            >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/personage"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="难过的时候给你一个抱枕"
                android:textColor="@color/txt_annotation_color"
                android:textSize="@dimen/txt_14sp"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fl_login"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:paddingRight="10dp"
                    android:background="@color/selector_white"
                    >
                <EditText
                    android:id="@+id/et_login_user"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:hint="手机号/邮箱"
                    android:textSize="@dimen/txt_12sp"
                    android:textColor="#999999"
                    android:paddingLeft="20dp"
                    android:textColorHint="@color/txt_annotation_color"
                    android:background="@color/selector_white"
                    android:paddingRight="10dp"
                    android:lines="1"
                    />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/selector_white"
                    >
                <EditText
                    android:id="@+id/et_login_ps"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:hint="输入密码"
                    android:textColor="#999999"
                    android:paddingLeft="20dp"
                    android:textColorHint="@color/txt_annotation_color"
                    android:background="@color/selector_white"
                    android:textSize="@dimen/txt_12sp"
                    android:inputType="textPassword"
                    />
                    <ImageView
                        android:id="@+id/iv_eye"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/eye_higligted"
                        android:layout_gravity="center"
                        />
                    </LinearLayout>
                <TextView
                    android:id="@+id/login"
                    android:layout_marginTop="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:text="登录"
                    android:textColor="@color/selector_white"
                    android:background="@drawable/btn_orange"
                    android:gravity="center"
                    />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_login_forget"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt_12sp"
                        android:textColor="@color/txt_annotation_color"
                        android:text="忘记密码"
                        android:padding="10dp"
                        />
                    <TextView
                        android:id="@+id/tv_login_register"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt_12sp"
                        android:textColor="@color/txt_annotation_color"
                        android:text="新用户注册"
                        android:padding="10dp"
                        android:gravity="right"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:paddingRight="10dp"
                    android:background="@color/selector_white"
                    android:layout_marginTop="10dp"
                    android:visibility="invisible"
                    >
                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:hint="手机号/邮箱"
                        android:textSize="@dimen/txt_12sp"
                        android:textColor="#999999"
                        android:paddingLeft="20dp"
                        android:textColorHint="@color/txt_annotation_color"
                        android:background="@color/selector_white"
                        android:paddingRight="10dp"
                        android:lines="1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:paddingRight="10dp"
                    android:background="@color/selector_white"
                    android:layout_marginTop="10dp"
                    android:visibility="invisible"
                    >
                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:hint="手机号/邮箱"
                        android:textSize="@dimen/txt_12sp"
                        android:textColor="#999999"
                        android:paddingLeft="20dp"
                        android:textColorHint="@color/txt_annotation_color"
                        android:background="@color/selector_white"
                        android:paddingRight="10dp"
                        android:lines="1"
                        />
                </LinearLayout>

            </LinearLayout>

            <!--<include layout="@layout/loginpopwindow"/>-->
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fl_register"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone"
            >
            <LinearLayout
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/et_register_name"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:hint="昵称"
                        android:textSize="@dimen/txt_12sp"
                        android:textColor="#999999"
                        android:paddingLeft="20dp"
                        android:textColorHint="@color/txt_annotation_color"
                        android:background="@color/selector_white"
                        android:paddingRight="10dp"
                        />
                    <EditText
                        android:id="@+id/et_register_user"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:hint="手机号/邮箱"
                        android:textSize="@dimen/txt_12sp"
                        android:textColor="#999999"
                        android:paddingLeft="20dp"
                        android:textColorHint="@color/txt_annotation_color"
                        android:background="@color/selector_white"
                        android:paddingRight="10dp"
                        android:layout_marginTop="10dp"
                        />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/selector_white"
                    >
                    <EditText
                        android:id="@+id/et_register_ps"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:hint="输入密码"
                        android:textColor="#999999"
                        android:paddingLeft="20dp"
                        android:textColorHint="@color/txt_annotation_color"
                        android:background="@color/selector_white"
                        android:textSize="@dimen/txt_12sp"
                        android:inputType="textPassword"
                        />
                    <ImageView
                        android:id="@+id/iv_register_eye"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/eye_higligted"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        >
                        <EditText
                            android:id="@+id/et_register_ems"
                            android:layout_width="wrap_content"
                            android:layout_weight="2"
                            android:layout_height="40dp"
                            android:hint="验证码"
                            android:textSize="@dimen/txt_12sp"
                            android:textColor="#999999"
                            android:paddingLeft="20dp"
                            android:textColorHint="@color/txt_annotation_color"
                            android:background="@color/selector_white"
                            android:paddingRight="10dp"
                            />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.5"
                            >
                            <Button
                                android:id="@+id/btn_register_ems"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:background="@drawable/btn_commit"
                                android:layout_marginLeft="10dp"
                                android:text="获取验证码"
                                android:textSize="@dimen/txt_12sp"
                                android:textColor="@color/selector_white"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/register"
                        android:layout_marginTop="10dp"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:text="注册"
                        android:textColor="@color/selector_white"
                        android:background="@drawable/btn_orange"
                        android:gravity="center"
                        />
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_register_forget"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/txt_12sp"
                            android:textColor="@color/txt_annotation_color"
                            android:text="忘记密码"
                            android:padding="10dp"
                            />
                        <TextView
                            android:id="@+id/tv_register_login"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/txt_12sp"
                            android:textColor="@color/txt_annotation_color"
                            android:text="登录"
                            android:padding="10dp"
                            android:gravity="right"
                            />
                    </LinearLayout>

                </LinearLayout>
            <!--<include layout="@layout/registerpopwindow"/>-->
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fl_forget"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="visible"
            >
            <LinearLayout
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/et_forget_user"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:hint="手机号/邮箱"
                    android:textSize="@dimen/txt_12sp"
                    android:textColor="#999999"
                    android:paddingLeft="20dp"
                    android:textColorHint="@color/txt_annotation_color"
                    android:background="@color/selector_white"
                    android:paddingRight="10dp"
                    android:layout_marginTop="10dp"
                    />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    >
                    <EditText
                        android:id="@+id/et_forget_ems"
                        android:layout_width="wrap_content"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:hint="验证码"
                        android:textSize="@dimen/txt_12sp"
                        android:textColor="#999999"
                        android:paddingLeft="20dp"
                        android:textColorHint="@color/txt_annotation_color"
                        android:background="@color/selector_white"
                        android:paddingRight="10dp"
                        />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.5"
                        >
                        <Button
                            android:id="@+id/btn_forget_ems"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/btn_commit"
                            android:layout_marginLeft="10dp"
                            android:text="获取验证码"
                            android:textSize="@dimen/txt_12sp"
                            android:textColor="@color/selector_white"
                            />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/selector_white"
                    >
                    <EditText
                        android:id="@+id/et_forget_ps"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:hint="输入密码"
                        android:textColor="#999999"
                        android:paddingLeft="20dp"
                        android:textColorHint="@color/txt_annotation_color"
                        android:background="@color/selector_white"
                        android:textSize="@dimen/txt_12sp"
                        android:inputType="textPassword"
                        />
                    <ImageView
                        android:id="@+id/iv_forget_eye"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/eye_higligted"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_forget"
                    android:layout_marginTop="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:text="找回密码"
                    android:textColor="@color/selector_white"
                    android:background="@drawable/btn_orange"
                    android:gravity="center"
                    />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_forget_login"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt_12sp"
                        android:textColor="@color/txt_annotation_color"
                        android:text="登录"
                        android:padding="10dp"
                        />
                    <TextView
                        android:id="@+id/txt_forget_register"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt_12sp"
                        android:textColor="@color/txt_annotation_color"
                        android:text="新用户注册"
                        android:padding="10dp"
                        android:gravity="right"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:paddingRight="10dp"
                    android:background="@color/selector_white"
                    android:layout_marginTop="10dp"
                    android:visibility="invisible"
                    >
                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:hint="手机号/邮箱"
                        android:textSize="@dimen/txt_12sp"
                        android:textColor="#999999"
                        android:paddingLeft="20dp"
                        android:textColorHint="@color/txt_annotation_color"
                        android:background="@color/selector_white"
                        android:paddingRight="10dp"
                        android:lines="1"
                        />
                </LinearLayout>
            </LinearLayout>
           <!-- <include layout="@layout/forgetfragment"/>-->
        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>
    </ScrollView>
    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/quxiao"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="30dp"
        />
</RelativeLayout>