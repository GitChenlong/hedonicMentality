        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
        <EditText
            android:id="@+id/et_user"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:hint="手机号/邮箱"
            android:textSize="@dimen/txt_12sp"
            android:textColor="#999999"
            android:paddingLeft="20dp"
            android:textColorHint="@color/txt_annotation_color"
            android:background="@color/selector_white"
            android:paddingRight="10dp"
            />
        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/et_ps"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:hint="输入密码"
            android:textColor="#999999"
            android:paddingLeft="20dp"
            android:textColorHint="@color/txt_annotation_color"
            android:background="@color/selector_white"
            android:textSize="@dimen/txt_12sp"
            android:drawableRight="@mipmap/eye_higligted"
            android:paddingRight="10dp"
            />
        <TextView
            android:id="@+id/login"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="登录"
            android:textColor="@color/selector_white"
            android:background="@drawable/btn_orange"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_12sp"
                android:textColor="@color/txt_annotation_color"
                android:text="忘记密码"
                android:padding="10dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_12sp"
                android:textColor="@color/txt_annotation_color"
                android:text="新用户注册"
                android:padding="10dp"
                android:gravity="right"
                />
        </LinearLayout>
        </LinearLayout>
