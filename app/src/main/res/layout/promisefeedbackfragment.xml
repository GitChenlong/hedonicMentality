<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:clickable="true"
    >
    <include layout="@layout/title"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@color/selector_white"
        >
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="失业者"
            android:textColor="@color/txt_content_color"
            android:textSize="@dimen/txt_16sp"
            />
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:gravity="center"
                >
                <com.sage.hedonicmentality.widget.CircleImageView
                    android:id="@+id/teacher"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/personage"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="咨询师"
                    android:textSize="@dimen/txt_16sp"
                    android:textColor="@color/green_essential_colour"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textColor="@color/txt_content_color"
                    android:textSize="@dimen/txt_14sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                >
                <com.sage.hedonicmentality.widget.CircleImageView
                    android:id="@+id/myself"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/personage"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="咨询师"
                    android:textSize="@dimen/txt_16sp"
                    android:textColor="@color/green_essential_colour"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textColor="@color/txt_content_color"
                    android:textSize="@dimen/txt_14sp"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:hint="反馈说明"
        android:textColor="@color/txt_content_color"
        android:textSize="@dimen/txt_16sp"
        android:background="@color/selector_white"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        >
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/orange_secondary_color"
            android:textSize="@dimen/txt_14sp"
            android:textColor="@color/selector_white"
            android:text="提交反馈"
            android:gravity="center"
            android:padding="10dp"
            />
    </LinearLayout>

</LinearLayout>