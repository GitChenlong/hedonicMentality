<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
        >
        <EditText
            android:id="@+id/et_name"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:hint="昵称"
            android:textSize="@dimen/txt_12sp"
            android:textColor="#999999"
            android:paddingLeft="20dp"
            android:textColorHint="@color/txt_annotation_color"
            android:background="@color/selector_white"
            android:paddingRight="10dp"
            />
        <EditText
            android:id="@+id/et_user"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:hint="手机号/邮箱"
            android:textSize="@dimen/txt_12sp"
            android:textColor="#999999"
            android:paddingLeft="20dp"
            android:textColorHint="@color/txt_annotation_color"
            android:background="@color/selector_white"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/et_ps"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:hint="输入密码"
            android:textColor="#999999"
            android:paddingLeft="20dp"
            android:textColorHint="@color/txt_annotation_color"
            android:background="@color/selector_white"
            android:textSize="@dimen/txt_12sp"
            android:drawableRight="@mipmap/eye_higligted"
            android:paddingRight="10dp"
            />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                >
                <EditText
                    android:id="@+id/et_ems"
                    android:layout_width="wrap_content"
                    android:layout_weight="2"
                    android:layout_height="40dp"
                    android:hint="手机号/邮箱"
                    android:textSize="@dimen/txt_12sp"
                    android:textColor="#999999"
                    android:paddingLeft="20dp"
                    android:textColorHint="@color/txt_annotation_color"
                    android:background="@color/selector_white"
                    android:paddingRight="10dp"
                    />
                <Button
                    android:id="@+id/btn_ems"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/btn_commit"
                    android:layout_marginLeft="10dp"
                    android:text="获取验证码"
                    android:textSize="@dimen/txt_12sp"
                    android:textColor="@color/selector_white"
                    />
            </LinearLayout>
        <TextView
            android:id="@+id/register"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="注册"
            android:textColor="@color/selector_white"
            android:background="@drawable/btn_orange"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_forget"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_12sp"
                android:textColor="@color/txt_annotation_color"
                android:text="忘记密码"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/tv_login"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_12sp"
                android:textColor="@color/txt_annotation_color"
                android:text="登录"
                android:padding="10dp"
                android:gravity="right"
                />
        </LinearLayout>
        </LinearLayout>
