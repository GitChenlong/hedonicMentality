<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/selector_white"
    android:id="@+id/rl_screen"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="价格"
        android:textColor="@color/line_black"
        android:textSize="@dimen/txt_16sp"
        />
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="最低价"
            android:background="@drawable/btn_screen"
            android:textColor="@color/txt_annotation_color"
            android:padding="5dp"
            android:gravity="center"
            android:textSize="@dimen/txt_12sp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:gravity="center"

            >
        <ImageView
            android:layout_width="10dp"
            android:layout_height="1px"
            android:background="@color/grays"
            />
            </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="最低价"
            android:background="@drawable/btn_screen"
            android:textColor="@color/txt_annotation_color"
            android:padding="5dp"
            android:gravity="center"
            android:textSize="@dimen/txt_12sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
                android:id="@+id/rg_price"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/rb_price_one"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="不限"
                    android:textSize="@dimen/txt_12sp"
                    android:background="@drawable/btn_screen_check"
                    android:textColor="@color/txt_annotation_color"
                    android:padding="5dp"
                    android:checked="true"
                    />

                <TextView
                    android:id="@+id/rb_price_two"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="0-99"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/btn_screen"
                    android:textColor="@color/txt_annotation_color"
                    android:padding="5dp"
                    android:textSize="@dimen/txt_12sp"
                    />
                <TextView
                    android:id="@+id/rb_price_three"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_12sp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="100-199"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/btn_screen"
                    android:textColor="@color/txt_annotation_color"
                    android:padding="5dp"
                    />

             </LinearLayout>
        <LinearLayout
            android:id="@+id/rg_price_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            >
            <TextView
                android:id="@+id/rb_price_four"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="200-299"
                android:textSize="@dimen/txt_12sp"
                android:background="@drawable/btn_screen"
                android:textColor="@color/txt_annotation_color"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:background="@color/grays"
                android:textColor="@drawable/select_txt_color"
                android:visibility="invisible"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:background="@color/grays"
                android:textColor="@drawable/select_txt_color"
                android:visibility="invisible"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>
        </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="年龄"
        android:textColor="@color/line_black"
        android:textSize="@dimen/txt_16sp"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/rg_age_one"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/rb_age_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="不限"
                android:textSize="@dimen/txt_12sp"
                android:background="@drawable/btn_screen_check"
                android:textColor="@color/txt_annotation_color"
                android:padding="5dp"
                android:checked="true"
                />

            <TextView
                android:id="@+id/rb_age_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="40后"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/txt_12sp"
                android:padding="5dp"
                android:background="@drawable/btn_screen"
                android:textColor="@color/txt_annotation_color"
                />
            <TextView
                android:id="@+id/rb_age_three"
                android:textSize="@dimen/txt_12sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="50后"
                android:background="@drawable/btn_screen"
                android:textColor="@color/txt_annotation_color"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/rg_age_two"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/rb_age_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="60后"
                android:textSize="@dimen/txt_12sp"
                android:background="@drawable/btn_screen"
                android:textColor="@color/txt_annotation_color"
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/rb_age_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_12sp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="70后"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btn_screen"
                android:textColor="@color/txt_annotation_color"
                android:padding="5dp"
                />
            <TextView
                android:id="@+id/rb_age_six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="80后"
                android:textSize="@dimen/txt_12sp"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btn_screen"
                android:textColor="@color/txt_annotation_color"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/rg_age_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="5dp"
            >
        <TextView
            android:id="@+id/rb_age_seven"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="90后"
            android:textSize="@dimen/txt_12sp"
            android:background="@drawable/btn_screen"
            android:textColor="@color/txt_annotation_color"
            android:padding="5dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="最低价"
            android:background="@color/grays"
            android:textColor="@drawable/select_txt_color"
            android:layout_marginLeft="20dp"
            android:visibility="invisible"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="最低价"
            android:background="@color/grays"
            android:textColor="@drawable/select_txt_color"
            android:layout_marginLeft="20dp"
            android:visibility="invisible"
            />

    </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="性别"
        android:textColor="@color/line_black"
        android:textSize="@dimen/txt_16sp"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/rg_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/rb_sex_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="不限"
                android:background="@drawable/btn_screen_check"
                android:textSize="@dimen/txt_12sp"
                android:textColor="@color/txt_annotation_color"
                android:padding="5dp"
                android:checked="true"
                />

            <TextView
                android:id="@+id/rb_sex_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="男"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/txt_12sp"
                android:background="@drawable/btn_screen"
                android:textColor="@color/txt_annotation_color"
                android:padding="5dp"
                />
            <TextView
                android:id="@+id/rb_sex_three"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_12sp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="女"
                android:background="@drawable/btn_screen"
                android:textColor="@color/txt_annotation_color"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                />

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="是否在线"
        android:textColor="@color/line_black"
        android:textSize="@dimen/txt_16sp"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/rg_oneline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/rb_oneline_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="是"
                android:background="@drawable/btn_screen_check"
                android:textColor="@color/txt_annotation_color"
                android:padding="5dp"
                android:textSize="@dimen/txt_12sp"
                android:checked="true"
                />

            <TextView
                android:id="@+id/rb_oneline_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="否"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btn_screen"
                android:textColor="@color/txt_annotation_color"
                android:textSize="@dimen/txt_12sp"
                android:padding="5dp"
                />

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:id="@+id/tv_reset"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="重置"
            android:textSize="@dimen/txt_14sp"
            />
        <TextView
            android:id="@+id/tv_affirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="确定"
            android:textSize="@dimen/txt_14sp"
            android:background="@color/text_orange"
            android:textColor="@color/selector_white"
        />


    </LinearLayout>
</RelativeLayout>