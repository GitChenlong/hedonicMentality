<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/selector_white"
    >
    <LinearLayout
        android:background="@color/selector_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <FrameLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            >
            <EditText
                android:id="@+id/search_et_input"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@mipmap/searchss"
                android:drawablePadding="10dp"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:textSize="@dimen/txt_14sp"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:hint="请输入咨询师的姓名"
                android:background="@drawable/btn_grays"
                android:textColor="@color/txt_annotation_color"
                android:padding="10dp"
                />

            <ImageView
                android:layout_marginRight="20dp"
                android:id="@+id/search_iv_delete"
                android:layout_gravity="right|center_vertical"
                android:layout_width="20dp"
                android:background="@mipmap/close"
                android:layout_height="20dp"
                android:visibility="gone"
                />
        </FrameLayout>

        <TextView
            android:id="@+id/search_btn_back"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_vertical"
            android:text="取消"
            android:textColor="@color/green_essential_colour"
            android:textSize="@dimen/txt_16sp"
            android:gravity="center"
            />
    </LinearLayout>
        <ListView
            android:visibility="gone"
            android:id="@+id/search_lv_tips"
            android:background="@color/bg_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="5dp"
            android:padding="5dp"
            >
        </ListView>

</LinearLayout>
