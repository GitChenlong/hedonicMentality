<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:clickable="true"
    >
    <include layout="@layout/title"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/selector_white"
        android:padding="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cleancache"
            android:textColor="@color/txt_big_headline_color"
            android:textSize="@dimen/txt_16sp"
            android:gravity="center_vertical"
            />
        <LinearLayout
            android:id="@+id/ll_cache"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <TextView
            android:id="@+id/cachesize"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="@dimen/txt_16sp"
            android:text="70M"
            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/more"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:background="@color/txt_big_headline_color"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/selector_white"
        android:padding="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/update"
            android:textColor="@color/txt_big_headline_color"
            android:textSize="@dimen/txt_16sp"
            android:gravity="center_vertical"
            />
        <LinearLayout
            android:id="@+id/update"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="right"
            >
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/more"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_about"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/selector_white"
        android:padding="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about"
            android:textColor="@color/txt_big_headline_color"
            android:textSize="@dimen/txt_16sp"
            android:gravity="center_vertical"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="right"
            >
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/more"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/outlogin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/outlogin"
        android:textSize="@dimen/txt_16sp"
        android:textColor="@color/txt_big_headline_color"
        android:gravity="center"
        android:padding="10dp"
        android:background="@color/selector_white"
        />
</LinearLayout>