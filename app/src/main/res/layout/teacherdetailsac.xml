<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tv_black"
    android:clickable="true"
    android:id="@+id/ll_techerdetails"
    >
    <com.sage.hedonicmentality.widget.MyScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/myscrollview"
        android:layout_above="@+id/ll_bottom"
        >
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="fill_parent"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ll_title_three"
            >
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:background="@color/grays"
                >
                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/back"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    />
                <ImageView
                    android:id="@+id/iv_intent"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/play"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/selector_white"
                >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingTop="5dp"
                            android:layout_marginLeft="5dp"
                            >
                            <TextView
                                android:id="@+id/tv_teachername"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/green_essential_colour"
                                android:text="郑秀晶"
                                android:textSize="@dimen/teacher_name_size"
                                />
                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:orientation="vertical"
                                >
                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_abstract"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:ellipsize="end"
                            android:text="ash是啥估价师几个卡时间 干啥看吧估计设计共和时间噶花生价格和按设计规沙发沙发发啊艾弗森啊沙发上沙发 划按设计感收购价灰色轨迹好"
                            android:padding="5dp"
                            android:textSize="@dimen/txt_14sp"
                            android:textColor="@color/txt_annotation_color"
                            />

                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        >
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="60dp"
                            android:layout_centerHorizontal="true"
                            android:background="@color/green_essential_colour"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/money"
                            android:layout_centerInParent="true"
                            android:textSize="@dimen/txt_12sp"
                            android:textColor="@color/selector_white"
                            />
                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    >
                    <LinearLayout
                        android:id="@+id/ll_indent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:gravity="center"
                        >
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@mipmap/orderss"
                            />
                        <TextView
                            android:id="@+id/tv_indent"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:textColor="@color/orange_secondary_color"
                            android:text="21531"
                            android:textSize="@dimen/txt_10sp"
                            android:layout_marginLeft="1dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_love"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:gravity="center"
                        >
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@mipmap/smile"
                            />
                        <TextView
                            android:id="@+id/tv_love"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:textColor="@color/orange_secondary_color"
                            android:text="21531"
                            android:textSize="@dimen/txt_10sp"
                            android:layout_marginLeft="1dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_flower"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:gravity="center"
                        >
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@mipmap/flower_normal"
                            />
                        <TextView
                            android:id="@+id/tv_flower"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:textColor="@color/orange_secondary_color"
                            android:text="21531"
                            android:textSize="@dimen/txt_10sp"
                            android:layout_marginLeft="1dp"
                            />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="@color/bg_color"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:orientation="vertical"
            android:id="@+id/ll_title_one"
            android:background="@color/selector_white"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/ll_title"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:background="@color/selector_white"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:id="@+id/ll_details"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:text="@string/s_details"
                        android:gravity="center"
                        android:textSize="@dimen/txt_16sp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/txt_content_color"
                        />
                    <TextView
                        android:id="@+id/ll_evaluate"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:text="@string/s_evaluate"
                        android:gravity="center"
                        android:layout_marginRight="80dp"
                        android:layout_marginLeft="5dp"
                        android:textSize="@dimen/txt_16sp"
                        android:textColor="@color/txt_content_color"
                        />

                    </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@color/bg_color"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="2dp"
                        android:background="@color/green_essential_colour"
                        android:id="@+id/de_line"
                        android:layout_marginLeft="90dp"
                        android:layout_marginRight="10dp"
                        />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="2dp"
                        android:background="@color/green_essential_colour"
                        android:id="@+id/ev_line"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="90dp"
                        android:visibility="invisible"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/fl_details"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/selector_white"
            />
    </LinearLayout>
    </com.sage.hedonicmentality.widget.MyScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#FAFAFA"
        >
        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/share"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/s_share"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_attention"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/follow_normal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/s_attention"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_order"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/orange_secondary_color"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/s_order"
                android:textColor="@color/selector_white"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:id="@+id/ll_title_two"
        android:orientation="horizontal"
        />
</RelativeLayout>