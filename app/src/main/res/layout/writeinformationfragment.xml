<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:id="@+id/ll_writeinformation"
    >
    <include layout="@layout/title"/>
    <include layout="@layout/layout_user"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/selector_white"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_14sp"
                android:textColor="@color/txt_content_color"
                android:text="姓名"
                android:padding="10dp"
                />
            <EditText
                android:id="@+id/et_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:hint="请填写真实姓名"
                android:textColor="@color/txt_annotation_color"
                android:textSize="@dimen/txt_12sp"
                android:background="@null"
                android:paddingLeft="10dp"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/txt_annotation_color"
            android:layout_marginLeft="10dp"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginRight="5dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/choice_normal"
                    />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_14sp"
                    android:textColor="@color/txt_content_color"
                    android:text="先生"
                    android:padding="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_marginLeft="5dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/choice_normal"
                    />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_14sp"
                    android:textColor="@color/txt_content_color"
                    android:text="女士"
                    android:padding="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/txt_annotation_color"
            android:layout_marginLeft="10dp"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_14sp"
                android:textColor="@color/txt_content_color"
                android:text="年纪"
                android:padding="10dp"
                />
            <EditText
                android:id="@+id/et_age"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:hint="请填写真实年纪"
                android:textColor="@color/txt_annotation_color"
                android:textSize="@dimen/txt_12sp"
                android:background="@null"
                android:paddingLeft="10dp"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/txt_annotation_color"
            android:layout_marginLeft="10dp"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_14sp"
                android:textColor="@color/txt_content_color"
                android:text="最高学历"
                android:padding="10dp"
                />

            <RelativeLayout
                android:id="@+id/rl_education"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >
                <TextView
                    android:id="@+id/txt_education"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textSize="@dimen/txt_14sp"
                    android:textColor="@color/txt_annotation_color"
                    />
                <ImageView
                    android:id="@+id/iv_education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow_down"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"

                    />
            </RelativeLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/txt_annotation_color"
            android:layout_marginLeft="10dp"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_14sp"
                android:textColor="@color/txt_content_color"
                android:text="职业"
                android:padding="10dp"
                />
            <EditText
                android:id="@+id/et_profession"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:hint="请填写真实职业"
                android:textColor="@color/txt_annotation_color"
                android:textSize="@dimen/txt_12sp"
                android:background="@null"
                android:paddingLeft="10dp"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/txt_annotation_color"
            android:layout_marginLeft="10dp"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_14sp"
                android:textColor="@color/txt_content_color"
                android:text="咨询领域"
                android:padding="10dp"
                />
            <RelativeLayout
                android:id="@+id/rl_territory"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >
                <TextView
                    android:id="@+id/txt_territory"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textSize="@dimen/txt_14sp"
                    android:textColor="@color/txt_annotation_color"
                    />
                <ImageView
                    android:id="@+id/iv_territory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow_down"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/txt_annotation_color"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:background="@color/selector_white"
        android:hint="咨询的原因及困惑"
        android:textSize="@dimen/txt_12sp"
        android:padding="10dp"
        android:gravity="start"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingRight="10dp"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/choice_normal"
            />
        </LinearLayout>
        <TextView
            android:id="@+id/txt_xiyi"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textSize="@dimen/txt_14sp"
            android:textColor="@color/txt_annotation_color"
            android:text="同意《咨询服务协议》"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btn_commit"
        android:layout_marginTop="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange_secondary_color"
        android:textColor="@color/selector_white"
        android:textSize="@dimen/txt_14sp"
        android:text="@string/commit"
        android:padding="15dp"
        />
</LinearLayout>